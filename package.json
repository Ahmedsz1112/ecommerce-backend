{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "E-commerce API with Node.js, Express, and MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
